import heapq
def solution(scoville, K):
    if sum(scoville) == 0:
        return -1
    heapq.heapify(scoville)
    answer = 0
    while scoville[0] < K:
        if len(scoville) < 2:
            return -1
        f = heapq.heappop(scoville)
        s = heapq.heappop(scoville)
        heapq.heappush(scoville, f + s * 2)
        answer += 1
    return answer